generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

enum GirlCategory {
  PLUS35
  PLUS50
  PLUS60
  ONLINE
}

model Girl {
  id             Int             @id @default(autoincrement())
  slug           String          @unique
  firstName      String
  lastName       String
  city           String
  age            Int
  description    String          @db.MediumText
  mainImage      String
  images         Json
  videos         Json            @default("[]")  // YouTube
  vkVideos       Json            @default("[]")  // üî∏ VK ‚Äî –ù–û–í–û–ï
  category       GirlCategory    @default(PLUS35)
  createdAt      DateTime        @default(now())
  updatedAt      DateTime        @updatedAt

  votes          Vote[] 
  categoryWinner CategoryWinner?

  @@index([createdAt])
  @@index([category])
}

model User {
  id        Int      @id @default(autoincrement())
  email     String   @unique
  password  String
  isAdmin   Boolean  @default(false)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  votes     Vote[]
}

model Vote {
  id        Int           @id @default(autoincrement())
  userId    Int
  girlId    Int
  category  GirlCategory  @default(PLUS35)
  createdAt DateTime      @default(now())

  user      User @relation(fields: [userId], references: [id], onDelete: Cascade)
  girl      Girl @relation(fields: [girlId], references: [id], onDelete: Cascade)

  @@unique([userId, category], name: "userId_category_unique")
  @@unique([userId, girlId], name: "userId_girlId")
  @@index([girlId])
  @@index([userId])
}

model CategoryWinner {
  category  GirlCategory @id
  girlId    Int          @unique
  girl      Girl         @relation(fields: [girlId], references: [id], onDelete: Cascade)
  createdAt DateTime     @default(now())
  updatedAt DateTime     @updatedAt
}
