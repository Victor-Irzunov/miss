// prisma/schema.prisma

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model Girl {
  id          Int       @id @default(autoincrement())
  slug        String    @unique
  firstName   String
  lastName    String
  city        String
  age         Int
  description String    @db.MediumText   // <-- было String, стало MediumText
  mainImage   String
  images      Json
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt

  @@index([createdAt])
}

model User {
  id        Int      @id @default(autoincrement())
  email     String   @unique
  password  String
  isAdmin   Boolean  @default(false)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}
